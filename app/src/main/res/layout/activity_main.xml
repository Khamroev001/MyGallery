    </LinearLayout>
    <LinearLayout android:id="@+id/row3" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <ImageView android:id="@+id/img5" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:adjustViewBounds="true" android:scaleType="fitXY" app:srcCompat="@drawable/panda"/>
        <ImageView android:id="@+id/img6" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:adjustViewBounds="true" android:scaleType="fitXY" app:srcCompat="@drawable/sky"/>
    </LinearLayout>
